                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        tools:ignore="HardcodedText,RtlSymmetry" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:text="A leash is an essential tool for walking your dog. For active and strong dogs, a harness is gentler and provides better control compared to a collar, effectively preventing neck injuries."
